<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:padding="4dp"
    tools:context="at.shockbytes.dante.ui.activity.DetailActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_detail_cardview_dates"
        android:layout_margin="8dp"
        android:foreground="?attr/selectableItemBackground"
        android:transitionName="@string/transition_name_card"
        app:cardElevation="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp">

            <ImageView
                android:id="@+id/activity_detail_img_thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/contentdesc_listitem_img_thumb"
                android:transitionName="@string/transition_name_thumb"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_placeholder" />

            <TextView
                android:id="@+id/activity_detail_txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/activity_detail_img_thumb"
                android:layout_toRightOf="@+id/activity_detail_img_thumb"
                android:text="Title"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                android:textStyle="bold"
                android:transitionName="@string/transition_name_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/activity_detail_img_thumb"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activity_detail_txt_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_detail_txt_title"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/activity_detail_img_thumb"
                android:layout_toRightOf="@+id/activity_detail_img_thumb"
                android:fontFamily="sans-serif-light"
                android:text="Sub"
                android:textColor="@color/colorSecondaryText"
                android:textSize="14sp"
                android:transitionName="@string/transition_name_subtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/activity_detail_img_thumb"
                app:layout_constraintTop_toBottomOf="@+id/activity_detail_txt_title" />

            <TextView
                android:id="@+id/activity_detail_txt_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_detail_txt_subtitle"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/activity_detail_img_thumb"
                android:layout_toRightOf="@+id/activity_detail_img_thumb"
                android:fontFamily="sans-serif-light"
                android:text="Author"
                android:textColor="@color/colorSecondaryText"
                android:textSize="15sp"
                android:transitionName="@string/transition_name_author"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/activity_detail_img_thumb"
                app:layout_constraintTop_toBottomOf="@+id/activity_detail_txt_subtitle" />

            <Button
                android:id="@+id/activity_detail_btn_published"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:clickable="false"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_published_date"
                android:fontFamily="sans-serif-light"
                android:gravity="top|center"
                android:padding="8dp"
                android:text="2017-11-09"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline1"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_detail_txt_author" />

            <Button
                android:id="@+id/activity_detail_btn_rating"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_rating"
                android:fontFamily="sans-serif-light"
                android:gravity="top|center"
                android:padding="8dp"
                android:text="5 Stars"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/activity_detail_txt_author" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <Button
                android:id="@+id/activity_detail_btn_notes"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_notes"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/add_notes"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/activity_detail_btn_pages"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/activity_detail_btn_pages" />

            <ru.bullyboo.view.CircleSeekBar
                android:id="@+id/activity_detail_circle_seekbar_pages"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:dotColor="@color/colorAccent"
                app:dotRadius="7dp"
                app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline2"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/horizontalGuideline1"
                app:progressCircleLineColor="@color/colorAccent"
                app:showCounter="false"
                app:value="50" />

            <Button
                android:id="@+id/activity_detail_btn_pages"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_pages"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="1000 / 1000"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/activity_detail_circle_seekbar_pages"
                app:layout_constraintEnd_toEndOf="@+id/activity_detail_circle_seekbar_pages"
                app:layout_constraintStart_toStartOf="@+id/activity_detail_circle_seekbar_pages"
                app:layout_constraintTop_toTopOf="@+id/activity_detail_circle_seekbar_pages" />

            <android.support.constraint.Guideline
                android:id="@+id/horizontalGuideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.55" />

            <android.support.constraint.Guideline
                android:id="@+id/horizontalGuideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="1.0" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/activity_detail_cardview_dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/activity_detail_txt_wishlist_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/ic_popup_upcoming"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_popup_upcoming"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:textColor="@color/colorSecondaryText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/activity_detail_txt_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/ic_popup_current"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_popup_current"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:textColor="@color/colorSecondaryText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/activity_detail_txt_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/ic_popup_done"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_popup_done"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:textColor="@color/colorSecondaryText"
                android:textSize="14sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
