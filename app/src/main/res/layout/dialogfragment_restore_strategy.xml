<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/txtDialogFragmentBackupRestoreStrategyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/ic_google_drive"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_google_drive"
        android:text="@string/backup_restore_strategy_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/menuItemColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/backup_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="16dp"
        android:weightSum="1">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/dialogfragment_restore_strategy_btn_merge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/compat_ic_restore_merge"
            android:text="@string/backup_strategy_merge"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/nice_color" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/dialogfragment_restore_strategy_btn_overwrite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_weight="0.5"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/compat_ic_restore_overwrite"
            android:text="@string/backup_strategy_overwrite"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/iconColor" />

    </LinearLayout>

</LinearLayout>