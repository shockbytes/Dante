<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="@string/transition_name_card">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imgViewDetailFragmentThumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/contentdesc_listitem_img_thumb"
            android:transitionName="@string/transition_name_thumb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_placeholder" />

        <TextView
            android:id="@+id/txtDetailFragmentTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/imgViewDetailFragmentThumbnail"
            android:layout_toRightOf="@+id/imgViewDetailFragmentThumbnail"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="bold"
            android:transitionName="@string/transition_name_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgViewDetailFragmentThumbnail"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/txtDetailFragmentSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailFragmentTitle"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imgViewDetailFragmentThumbnail"
            android:layout_toRightOf="@+id/imgViewDetailFragmentThumbnail"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorSecondaryText"
            android:textSize="14sp"
            android:transitionName="@string/transition_name_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgViewDetailFragmentThumbnail"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailFragmentTitle"
            tools:text="Sub" />

        <TextView
            android:id="@+id/txtDetailFragmentAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailFragmentSubtitle"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/imgViewDetailFragmentThumbnail"
            android:layout_toRightOf="@+id/imgViewDetailFragmentThumbnail"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorSecondaryText"
            android:textSize="15sp"
            android:transitionName="@string/transition_name_author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgViewDetailFragmentThumbnail"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailFragmentSubtitle"
            tools:text="Author" />

        <Button
            android:id="@+id/btnDetailFragmentPublished"
            style="?attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:clickable="false"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-light"
            android:gravity="top|center"
            android:padding="8dp"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline1"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailFragmentAuthor"
            tools:text="2017-11-09" />

        <Button
            android:id="@+id/btnDetailFragmentRating"
            style="?attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-light"
            android:gravity="top|center"
            android:padding="8dp"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailFragmentAuthor"
            tools:text="5 Stars" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/btnDetailFragmentNotes"
            style="?attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/add_notes"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnDetailFragmentPages"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/btnDetailFragmentPages" />

        <ru.bullyboo.view.CircleSeekBar
            android:id="@+id/circleSeekbarDetailFragmentPages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:dotColor="@color/colorAccent"
            app:dotRadius="7dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/horizontalGuideline1"
            app:progressCircleLineColor="@color/colorAccent"
            app:showCounter="false"
            app:value="50" />

        <Button
            android:id="@+id/btnDetailFragmentPages"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/circleSeekbarDetailFragmentPages"
            app:layout_constraintEnd_toEndOf="@+id/circleSeekbarDetailFragmentPages"
            app:layout_constraintStart_toStartOf="@+id/circleSeekbarDetailFragmentPages"
            app:layout_constraintTop_toTopOf="@+id/circleSeekbarDetailFragmentPages"
            tools:text="1000 / 1000" />

        <android.support.constraint.Guideline
            android:id="@+id/horizontalGuideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <android.support.constraint.Guideline
            android:id="@+id/horizontalGuideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <LinearLayout
            android:id="@+id/layoutDetailFragmentDates"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewDetailFragmentDivider">

            <Button
                android:id="@+id/btnDetailFragmentWishlistDate"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="15sp"
                tools:text="27. March 2018" />

            <Button
                android:id="@+id/btnDetailFragmentStartDate"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="15sp"
                tools:text="06. May 2018" />

            <Button
                android:id="@+id/btnDetailFragmentEndDate"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="15sp"
                tools:text="04. June 2018" />

        </LinearLayout>

        <View
            android:id="@+id/viewDetailFragmentDivider"
            android:layout_width="0dp"
            android:layout_height="0.25dp"
            android:background="@color/empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleSeekbarDetailFragmentPages" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>