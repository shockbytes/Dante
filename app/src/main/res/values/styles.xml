<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPre23</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:windowSharedElementEnterTransition">@transition/hero_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/hero_transition</item>

        <item name="md_font_title">@font/montserrat</item>
        <item name="md_font_body">@font/montserrat</item>
        <item name="md_font_button">@font/montserrat</item>
        <item name="md_color_button_text">@color/colorAccent</item>
    </style>


    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/page_record_data</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/colorPrimaryInvert</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/colorPrimaryTextLight</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.Launcher">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.CardLayout">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="AppTheme.RoundedButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DanteAppWidget">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="DanteAppWidget.Regular" parent="DanteAppWidget">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DanteAppWidget.Small" parent="DanteAppWidget">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DanteAppWidget.Small.Italic" parent="DanteAppWidget.Small">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.BorderlessButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/colorBrand</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

    <style name="TextInputStyle">
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="TextInputCounterAppearance">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorTertiaryText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomSheetTheme" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent_black</item>
    </style>

    <style name="BottomSheetStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent_black</item>
    </style>


</resources>
