<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/supporterBadgeImageViewDeveloper"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_developer" />

    <TextView
        android:id="@+id/supporterBadgeTextViewRationale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="@string/supporter_badge_rationale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supporterBadgeImageViewDeveloper" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/supporterBadgeStandardButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:padding="8dp"
        android:text="@string/supporter_badge_standard_default"
        android:textColor="@color/white"
        app:backgroundTint="@color/support_badge_standard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/supporterBadgeGuideline"
        app:layout_constraintTop_toBottomOf="@+id/supporterBadgeTextViewRationale" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/supporterBadgePremiumButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:padding="8dp"
        android:text="@string/supporter_badge_premium_default"
        android:textColor="@color/white"
        app:backgroundTint="@color/support_badge_premium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/supporterBadgeGuideline"
        app:layout_constraintTop_toBottomOf="@+id/supporterBadgeStandardButton" />

    <android.support.constraint.Guideline
        android:id="@+id/supporterBadgeGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

</android.support.constraint.ConstraintLayout>